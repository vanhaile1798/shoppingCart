extends layout
block content
	include shoppingCart
	h1 Cart
	.container
		.tb
			table(style="width: 100%; text-align: center")
				tr
					th(style="width: 50%") Title
					th(style="width: 15%") Author
					th(style="width: 10%") Price
					th(style="width: 15%") Quantity
				if cart
					each it in cart.items
						tr
							td #{it.item.title}
							td #{it.item.author}
							td.price #{it.price}
							//- if (it.qty <= 10)
							td
								select
									option(value="1") 1
									option(value="2") 2
									option(value="3") 3
									option(value="4") 4
									option(value="5") 5
									option(value="6") 6
									option(value="7") 7
									option(value="8") 8
									option(value="9") 9
									option(value="10") 10
							//- - let total = it.qty
							//- if (it.qty > 10)
							//- 	td
							//- 		input.itemQty(value=total)
							td.qty.dsnone #{it.qty}
							td.id.dsnone #{it.item._id}

		if cart
			.cart
				p Total Quantity:
					span.checkout.total-qty #{cart.totalQty}
				p Total Amount: 
					span.checkout#total-amount #{cart.totalAmount}

				a.dlt-btn.add-btn(href="/checkout") Checkout
	script(src="https://unpkg.com/axios/dist/axios.min.js")
	script(src="/javascripts/app.js")